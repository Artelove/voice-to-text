<Window x:Class="VoiceToText.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Voice To Text" Height="220" Width="420">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="StartButton" Content="Start Recording" Click="OnStartClicked" Width="140" Height="40" Margin="0,0,12,0" />
            <Button x:Name="StopButton" Content="Stop" Click="OnStopClicked" Width="100" Height="40" IsEnabled="False" />
        </StackPanel>
        <TextBox x:Name="OutputText" Grid.Row="1" Margin="0,16,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
